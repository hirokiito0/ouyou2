<% if Favorite.find_by(user_id: current_user.id, book_id: book.id) %>
  <p>
    <%= link_to "/books/#{book.id}/favorites", method: :delete, remote: true do %>
      ♥<%= book.favorites.count %>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to "/books/#{book.id}/favorites", method: :post, remote: true do %>
      ♡<%= book.favorites.count %>
    <% end %>
  </p>
<% end %>
