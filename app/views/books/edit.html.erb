<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	<%= render 'layouts/errors', obj: @book %>
    		<%= form_with model:@book,url:book_path(@book),method: :patch, local:true do |f| %>
    		<div class="form-group">
          <label for="user_name">Name</label>
            <%= f.text_field :title,class:"form-control name", autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>

          <div class="form-group">
            <%= f.label :Opinion, class:'user_introduction'%><br />
            <%= f.text_area :body, class: 'form-control introduction', id: 'user_introduction' %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book",class:"btn btn-secondary"%>
          </div>

        <% end %>
  		<%= link_to 'Show', book_path(@book), class: "book_#{@book.id}" %> |
  		<%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>
<%= render 'layouts/footer' %>