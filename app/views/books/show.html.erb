<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user ,book: @book %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>

  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>

          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>

          <td>
            <%= @book.body %>
          </td>

          <td>
            <% if @user.id == current_user.id %>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %>
            <% end %>
          </td>

          <td>
            <% if @user.id == current_user.id %>
              <%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
            <% end %>
          </td>

          <td id="favorite-<%= @book.id %>">
            <%= render "favorites/favorite", book: @book %>
          </td>

          <td>
            <p>コメント件数：<%= @book.book_comments.count %></p>
          </td>

        </tr>

        </div>

      </table>

        <p id="book_comment<%= @book.id %>">
            <%= render "book_comments/book_comment", book: @book  %>
        </p>

      </div>
    </div>
  </div>
</div>
